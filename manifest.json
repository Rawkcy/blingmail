{
  "manifest_version": 2,

  "name": "EmailWing",
  "description": "This extension makes it easy to submit your emails for approval from others in GMail",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "css": [
        "css/emailwing.css"
      ],
      "js": [
        "js/jquery-1.8.3.min.js", 
        "js/firebase.js",
        "js/emailwing.js",
        "js/jquery.livequery.js",
        "js/firebase-handles.js"
      ],
      "run_at": "document_end"
    }
  ]
}
